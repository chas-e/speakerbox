<%- include("../partials/header") %>
    <section id="album-section">
        <h1>
            <%= title %>
        </h1>
        <h2>Enter Your Favorite Albums:</h2>
        <form action="/albums" id="new-album" method="POST">
            <label>Enter Album Title</label>
            <input type="text" name="title" placeholder="Enter An Album Title Here">
            <label>Select Release Date</label>
            <input type="date" name=releaseDate>
            <label>Enter a Label</label>
            <input type="text" name="label" placeholder="Enter the Label of the Album Here">
            <label>Select Artist</label>
            <select name="artist">
                <% if(artists.length) { %>
                <% artists.forEach(function(a) { %>
                    <option><%= a.name %></option>
                    <% }); %>
                <% } else { %>
                    <option>No Artists Entered Yet</option> 
                <% } %>
            </select>
            <label>Select Tracks</label>
            <select name="tracks">
            <% if(tracks.length) { %>
                <% tracks.forEach(function(t) { %>
                   <option><%= t.title %></option> 
                   <%  }); %>
            <% } else { %>
                <option>No Tracks Entered Yet</option>
            <% } %>
            </select>
            <input type="submit" value="Submit Album">
        </form>

        <ul id="album-list">
            <% if(albums.length) { %>
                <%  albums.forEach(function(al) { %>

                    <li>
                        <%= al.title  %>
                            <%= al.releaseDate  %>
                                <%= al.label %>
                                    <%= al.artist  %>
                                        <%= al.tracks  %>
                    </li>

                    <% }); %>

                        <% } else { %>

                            <h3>No Albums to Display Yet!</h3>

                            <% } %>

        </ul>

    </section>






    <%- include("../partials/footer") %>