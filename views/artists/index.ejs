<%- include("../partials/header") %>
    <section id="artist-section">
        <h2>Enter Your Favorite Artists:</h2>
        <form action="/artists" id="new-artist" method="POST">
            <label>Enter Artist Name</label>
            <input type="text" name="name" placeholder="Enter An Artist's Name Here">
            <label>Enter Artist's Genre</label>
            <input type="text" name=genre placeholder="Enter the Artist's Genre Here">
            <label>Select Album</label>
            <select name="album">
                <% if(albums.length) { %>
                    <% albums.forEach(function(al) { %>
                       <option>Null</option>
                        <option><%= al.title %></option> 
                       <%  }); %>
                <% } else { %>
                    <option>Null</option>
                <% } %>
            </select>
            <label>Select Tracks</label>
            <select name="tracks">
                <% if(tracks.length) { %>
                <% tracks.forEach(function(t) { %>
                    <option>Null</option>
                    <option>
                        <%= t.title %>
                    </option>
                    <% }); %>
                        <% } else { %>
                            <option>Null</option>
                            <% } %>
                                </select>
            <input type="submit" value="Submit Artist">
        </form>

        <ul id="artist-list">
            <% if(artists.length) { %>
                <%  artists.forEach(function(a) { %>

                    <li>
                        <%= a.name  %>
                            <%= a.genre %>
                                <%= a.albums  %>
                                    <%= a.tracks  %>
                    </li>

                    <% }); %>

                        <% } else { %>

                            <h3>No Artists to Display Yet!</h3>

                            <% } %>

        </ul>

    </section>






    <%- include("../partials/footer") %>